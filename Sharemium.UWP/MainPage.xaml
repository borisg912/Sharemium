<Page
    x:Class="Sharemium.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Sharemium"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="8,0">
            <TextBlock x:Uid="MainPageWarningMsg" TextWrapping="WrapWholeWords" TextAlignment="Center"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <HyperlinkButton x:Uid="MainPageStoreLink" Margin="5,0" NavigateUri="ms-windows-store://pdp?productid=9wzdncrfj3pv" Visibility="Collapsed"/>
                <HyperlinkButton x:Uid="MainPageGitHubLink" Margin="5,0" NavigateUri="https://borisg912.github.io/Sharemium"/>
            </StackPanel>
        </StackPanel>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="10">
            <Image Source="Assets/RawLogo.png" Width="40" Margin="5,0"/>
            <TextBlock FontSize="22" VerticalAlignment="Center">Sharemium</TextBlock>
        </StackPanel>
    </Grid>
</Page>
